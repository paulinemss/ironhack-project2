<h1>Signup</h1>

<form action="/auth/signup" method="POST" enctype="multipart/form-data">

   <label for="username">Username</label>
   <input type="text" id="username" name="username" required>

   <br>

   <label for="email">Email</label>
   <input type="text" id="email" name="email" required>

   <br>

   <label for="profilePic">Profile picture</label>
   <input type="file" id="profilePic" name="profilePic" accept="image/png, image/jpg">

   <br>

   <label for="interest">Interest</label>

   <input type="radio" id="environment" name="interest" value="environment" checked="checked">
   <label for="environment">Environmental action</label>

   <input type="radio" id="women" name="interest" value="women">
   <label for="women">Women's rights</label>

   <br>

   <label for="newPassword">Password</label>
   <input type="password" id="newPassword" name="newPassword" required>

   <br>

   <label for="confirmPassword">Confirm password</label>
   <input type="password" id="confirmPassword" name="confirmPassword" required>

   <br>

   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}