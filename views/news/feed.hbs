{{!-- MAIN NEWS PAGE --}}

{{> mainNav active='news' }}

<div class="wrapper">

  <div class="header">
    <div class="header-left">
      <button class="burger"><i class="fas fa-bars"></i></button>
      <h1>News</h1>
    </div>
  </div>

  <div class="main">
    <div class="all-card">

      <div class="dash-title">
        <h2>
          {{#ifEquals user.interest "environment"}}
          Recent news on climate change
          {{else}}
          Recent news on women's rights
          {{/ifEquals}}
        </h2>
      </div>

      {{#each data}}
      <div class="card">
        <div class="card-middle">
          <h4>{{pubDate}}</h4>
          <h3>{{title}}</h3>
          <p>{{contentSnippet}}</p>
          <a class="button-yellow" href="{{link}}" target="_blank">Read more</a>
        </div>
      </div>
      {{/each}}

    </div>
  </div>

</div>