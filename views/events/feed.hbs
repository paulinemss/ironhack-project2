<h1>Events</h1>

<h2>All Events</h2>

<a href="/events/create-event">Create event</a>

{{#if events}}

{{#each events}}
<div style="background-color:linen;" class="event-card">

  <h3>{{title}}</h3>
  <h4>Organiser: {{organiser}}</h4>

  <br>

  <img style="height:200px;" src="{{image}}" alt="{{title}} event image">

  <p>{{description}}</p>

  {{!-- --> TODO: format correctly the dates below  --}}
  <p>From {{startDate}} to {{endDate}}</p>

  <a href="/events/{{_id}}">More info</a>
  <p><i>Category: {{category}}</i></p>

</div>
{{/each}}

{{else}}

<div>
  Create a new event now!
</div>

{{/if}}