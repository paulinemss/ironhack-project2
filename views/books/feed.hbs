<h1> Books especially for you!</h1>
<br>
<div class = 'book-page'>
  <div class = 'new-books'>
  
    <h2> New books for you!</h2>
    <br>
  
    {{#each books}}
      <div class = 'book-card'>
        <img src="{{this.imageUrl}}" alt="{{this.title}}">
  
        <div class = 'book-info'>
          <h3> {{this.title}}</h3>
  
          <h4> Authors: </h4>
          {{#each this.authors}}
            <p> {{this}} </p>
          {{/each}}
  
          <a href="/books/{{this._id}}"> Read more...</a> 
  
          <br>
  
          <button type="button"> Like </button>
          <button type="button"> Already read! </button>
  
        </div>
      </div>
  
      <br>
      <br>
  
    {{/each}}
  </div>
  
  <div class = 'right-panel'>

    <div class = 'saved-books'>
      <h2>Saved books</h2>
      <ul>
        <li> Your favorite book</li>

        {{#if favorites }}
        
        <li></li>
        {{/if}}

      </ul>
    </div>

    <div class = 'read-books'>
      <h2>Already read!</h2>
       <ul>
        <li> I already read this book</li>
      </ul>
    </div>

  </div>

</div>

